{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-ninja",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "native-debug",
      "displayName": "Native Debug (Ninja)",
      "description": "Build using host toolchain in Debug mode",
      "inherits": "base-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "native-release",
      "displayName": "Native Release (Ninja)",
      "description": "Build using host toolchain in Release mode",
      "inherits": "base-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mingw-debug",
      "displayName": "MinGW Debug (Cross Compile)",
      "description": "Cross-compile using MinGW toolchain",
      "inherits": "base-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/mingw-toolchain.cmake"
      }
    },
    {
      "name": "mingw-release",
      "displayName": "MinGW Release (Cross Compile)",
      "description": "Cross-compile using MinGW toolchain",
      "inherits": "base-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain/mingw-toolchain.cmake"
      }
    }
  ],
  "buildPresets": [
    { "name": "native-debug",   "configurePreset": "native-debug" },
    { "name": "native-release", "configurePreset": "native-release" },
    { "name": "mingw-debug",    "configurePreset": "mingw-debug" },
    { "name": "mingw-release",  "configurePreset": "mingw-release" }
  ],
  "testPresets": [
    {
      "name": "native-debug",
      "configurePreset": "native-debug",
      "output": { "outputOnFailure": true },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "native-release",
      "configurePreset": "native-release",
      "output": { "outputOnFailure": true },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "native-release",
      "configurePreset": "native-release",
      "generators": ["TGZ"]
    },
    {
      "name": "mingw-release",
      "configurePreset": "mingw-release",
      "generators": ["TGZ"]
    }
  ],
  "workflowPresets": [
    {
      "name": "native",
      "displayName": "Native CI Workflow",
      "steps": [
        { "type": "configure", "name": "native-release" },
        { "type": "build",     "name": "native-release" },
        { "type": "test",      "name": "native-release" },
        { "type": "package",   "name": "native-release" }
      ]
    },
    {
      "name": "mingw",
      "displayName": "MinGW Cross CI Workflow",
      "steps": [
        { "type": "configure", "name": "mingw-release" },
        { "type": "build",     "name": "mingw-release" },
        { "type": "package",   "name": "mingw-release" }
      ]
    }
  ]
}
